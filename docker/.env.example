# =============================================================================
# GraphRAG Chatbot Platform - Environment Variables
# =============================================================================
# Copy this file to .env and update the values

# =============================================================================
# Database - PostgreSQL
# =============================================================================
POSTGRES_USER=graphrag
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=graphrag

# =============================================================================
# Database - Neo4j
# =============================================================================
NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# Authentication
# =============================================================================
# JWT secret key (must be at least 32 characters)
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long

# =============================================================================
# Initial Admin Account
# =============================================================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password_change_me

# =============================================================================
# Ollama LLM
# =============================================================================
OLLAMA_MODEL=nemotron-mini:4b

# =============================================================================
# Celery (auto-configured, no changes needed)
# =============================================================================
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/1
